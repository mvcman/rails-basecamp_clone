<%= turbo_stream.append "tasks", partial: "tasks/task", locals: { task: @task } %>
<%= turbo_stream.replace Task.new do %>
    <%= turbo_frame_tag Task.new do %>
        <div class="py-2">
            <%= link_to "Create New", new_sprint_task_path(@task.sprint), class: "border border-blue-600 rounded-md py-1 px-2 text-sm text-blue-600" %>
        </div>
    <% end %>
<% end %>
<%= turbo_stream.replace "tasks_count" do %>
    <%= turbo_frame_tag "tasks_count" do %>
        <div class="text gray-300"><%= @tasks.filter {|t| t.status.downcase == 'completed'}.count %> / <%= @tasks.count %></div>
    <% end %>
<% end %>
<%= turbo_stream.replace "tasks_notification_count2" do %>
    <%= turbo_frame_tag "tasks_notification_count2" do %>
        5
    <% end %>
<% end %>